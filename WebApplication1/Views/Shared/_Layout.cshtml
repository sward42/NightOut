<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBnGGUqrTuOUveVhVEY4Q3dgshQ3t2hWUA&libraries=places"
            async defer></script>
    <link href="https://fonts.googleapis.com/css?family=Federo" rel="stylesheet">    
</head>
<body ng-app="NightOut">
    <div class="navbar navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <h4>Nights Out Nashville</h4>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="#!/home">Home</a></li>
                    @*<li><a href="#!/searchMap">Search</a></li>*@
                    <li><a href="#!/itineraryList">Itineraries</a></li>
                    <li><a href="#!/destinationList">Destinations</a></li>
                    <li><a href="#!/itinerary">New Itinerary</a></li>
                </ul>
            </div>

        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="footer">
            <p>&copy; @DateTime.Now.Year - Nights Out Nashville created by Sarah Ward</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angular")
    @RenderSection("scripts", required: false)

   

</body>
</html>
